extends template/template
block vars
    - title = 'Feedback'
    - menu_active = ''
    - wrapper_class = ''
    - wrapper_id = ''
    - home_slider = false
    - banner_top = true
    - banner_image = 'banner.jpg'
    - login = false

append breadcrumb 
    +breadcrumb({}, title)
block mainer
    main.mainer
        .py-6.block-bg 
            .container  
                .row.row-cols-2.row-cols-md-4.g-3.g-lg-4 
                    .col
                        .thumb-res.wide: +img('theme/thumb@16x9.jpg')(class="fit-cover")
                    .col
                        .thumb-res.wide: +img('theme/thumb@16x9.jpg')(class="fit-cover")
                    .col
                        .thumb-res.wide: +img('theme/thumb@16x9.jpg')(class="fit-cover")
                    .col
                        .thumb-res.wide: +img('theme/thumb@16x9.jpg')(class="fit-cover")

        .block-bg.py-5.feedback-section 
            .container-f
                .text-center.mx-auto.col-lg-8.mb-4
                    h2.tt.text-uppercase.text-danger.fw-normal.mb-1.letter-spacing-2 Feedback
                    .tt-md.text-uppercase Khách hàng của chúng tôi
                    .d-width.border-bottom.border-3.border-primary.mx-auto
                .carousel-feedback 
                    .carousel-cell 
                        .block 
                            .thumb-avt.thumb-res: img(src='https://www-file.huawei.com/-/media/corp/home/image/logo_400x200.png' alt="")
                            .info
                                .feedback-content Lorem Ipsum chỉ đơn giản là một đoạn văn bản giả, được dùng vào việc trình bày và dàn trang phục vụ cho in ấn. Lorem Ipsum đã được sử dụng như một văn bản chuẩn cho ngành công nghiệp in ấn từ những năm 1500 về trước đó hoặc sau.
                                .auth CEO. Nguyen Van H
                    .carousel-cell 
                        .block 
                            .thumb-avt.thumb-res: img(src='https://viettelpost.com.vn/wp-content/uploads/2019/11/logo-380x270.jpg' alt="")
                            .info
                                .feedback-content Chúng ta vẫn biết rằng, làm việc với một đoạn văn bản dễ đọc và rõ nghĩa dễ gây rối trí và cản trở việc tập trung vào yếu tố trình bày văn bản như một công cụ hữu ích nhât.
                                .auth CEO. Le Thanh Tung
                    .carousel-cell 
                        .block 
                            .thumb-avt.thumb-res: img(src='https://nld.mediacdn.vn/thumb_w/540/2015/new-google-logo-1441170719116.png' alt="")
                            .info
                                .feedback-content Có rất nhiều biến thể của Lorem Ipsum mà bạn có thể tìm thấy, nhưng đa số được biến đổi bằng cách thêm các yếu tố hài hước, các từ ngẫu nhiên có khi không có vẻ gì là có ý nghĩa nhất thế giới. 
                                .auth CEO. Dang Van Nghi

