                        +a('#', 'block img-slide',): +img('slider/slider_02.jpg')
                .slide-box 
                    .slide-box-item.block
                        img(src='https://media.istockphoto.com/photos/diamond-on-the-water-picture-id639777488?k=20&m=639777488&s=612x612&w=0&h=f9TbqpJJjDLSoWw1zShIMIjbek7FgTZ6wpvedOVQsiM=')(class="fit-cover img-bg")
