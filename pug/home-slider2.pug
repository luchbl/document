        .container.grid-layout
            .grid-layout-left
                .cate-outer
                    .tt.tt-cate.text-uppercase
                        span.fa.fa-list.mr-2
                        | Danh mục sản phẩm
                    - cate1 = "Cồn Y Tế - Ethanol"
                    - cate2 = "Kit test nhanh"
                    - cate3 = "Y Tế Gia Đình"
                    - cate4 = "Khẩu Trang Y Tế"
                    - cate5 = "Máy đo nồng độ Oxi"
                    - cate6 = "Sản phẩm khác"
                    ul.cate-inner 
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/1.png')
                                span.text=cate1
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/2.png')
                                span.text=cate2
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/3.png')
                                span.text=cate3
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/4.png')
                                span.text=cate4
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/5.png')
                                span.text=cate5
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/6.png')
                                span.text=cate6
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/4.png')
                                span.text=cate4
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/5.png')
                                span.text=cate5
                        li.cate-inner-item
                            +a('products.html', 'd-flex align-items-center')
                                span.icon: +img('icon/6.png')
